{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              { "sourceTag": "scope:frontend-barman", "onlyDependOnLibsWithTags": ["scope:frontend-barman", "type:lib"] },
              { "sourceTag": "scope:frontend-admin", "onlyDependOnLibsWithTags": ["scope:frontend-admin", "type:lib"] },
              { "sourceTag": "scope:frontend-terminal", "onlyDependOnLibsWithTags": ["scope:frontend-terminal", "type:lib"] }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
